<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_session"
        tools:context=".viewcontrollers.activities.SessionActivity">

    <TextView
            android:id="@+id/titleDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/dateSesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleDateTextView"/>
    <TextView
            android:id="@+id/titleStartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/dateSesTextView"/>

    <TextView
            android:id="@+id/startTimeSesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleStartTextView"/>
    <TextView
            android:id="@+id/titleFinTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/end_time"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/startTimeSesTextView"/>

    <TextView
            android:id="@+id/finTimeSesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleFinTextView"/>

    <TextView
            android:id="@+id/titFirstAveTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_avenue"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/finTimeSesTextView"/>

    <TextView
            android:id="@+id/firstAvenTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titFirstAveTextView"/>

    <TextView
            android:id="@+id/titSecondAveTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/second_avenue"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/firstAvenTextView"/>

    <TextView
            android:id="@+id/secondAvenTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titSecondAveTextView"/>

</android.support.constraint.ConstraintLayout>