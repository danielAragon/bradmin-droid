<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_register"
        tools:context=".viewcontrollers.activities.RegisterActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/RegisterText"/>
    <LinearLayout
            android:id="@+id/LayoutNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/RegisterText">
        <EditText
                android:id="@+id/NameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:hint="Name"
                />
        <EditText
                android:id="@+id/LastNameText"
                android:layout_width="fill_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="LastName"/>
    </LinearLayout>
    <EditText
            android:id="@+id/EmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/LayoutNames"/>
    <LinearLayout
            android:id="@+id/LayoutUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/EmailText">
        <EditText
                android:id="@+id/UsernameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:hint="Username"
        />
        <EditText
                android:id="@+id/PasswordText"
                android:layout_width="fill_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Password"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/LayoutGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/LayoutUsers">
        <TextView
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="19dp"
                android:layout_width="fill_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"/>
        <RadioButton android:id="@+id/RButtonMale"
                     android:layout_width="fill_parent"
                     android:layout_marginHorizontal="2dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"

                     android:hint="Male"/>
        <RadioButton android:id="@+id/RButtonFemale"
                     android:layout_width="fill_parent"
                     android:layout_marginHorizontal="2dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:hint="Female"/>
    </LinearLayout>
    <EditText
            android:id="@+id/TokenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Token"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/LayoutGenre"/>
    <Button
            android:id="@+id/butonRegistrar"
            android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/TokenText"
    android:layout_marginTop="10dp"
            android:textSize="18dp"
    android:text="Registrar"/>


</android.support.constraint.ConstraintLayout>