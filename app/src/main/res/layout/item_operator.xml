<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_operator"
        android:layout_height="72dp"
        android:layout_width="match_parent">

    <com.androidnetworking.widget.ANImageView
            android:id="@+id/operatorImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/newimage"/>

    <TextView
            android:id="@+id/nameOperatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="17dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/operatorImageView"/>

    <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="15dp"
            android:text="@string/mock_text"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/operatorImageView"/>
    <ImageButton
            android:id="@+id/editOperatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24alterdp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/operatorImageView"
            android:background="#F2F2F2" />

</android.support.constraint.ConstraintLayout>